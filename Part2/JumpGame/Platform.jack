// A representation of the platform on which the avatar lands

class Platform {
    field int x_, y_;  // screen location of the platform's top-left corner
    filed int height_, width_; // the height and width of the platform

    constructor Platform new(int x, int y, int height, int width) {
        let x_ = x;
        let y_ = y;
        let height_ = height;
        let width_ = width;
        return this;
    }
}
